import java.net.InetAddress;
import java.net.UnknownHostException;

public class EjercicioA {

	public static void main(String[] args) {
		try {
			// Obtener dirección local
			//InetAddress localHost = InetAddress.getLocalHost();
			System.out.println("MI MAQUINA: " + InetAddress.getLocalHost());

			// Obtener tu direccion IP
			
			System.out.println("DIRECCIÓN: " + InetAddress.getLocalHost().getHostAddress());

			// Obtener nombre del host
			
			System.out.println("NOMBRE: " + InetAddress.getLocalHost().getHostName());

			// Obtener dirección IP a través del nombre
			
			System.out.println("NOMBRE CON EL MÉTODO (getByName): " + InetAddress.getByName(InetAddress.getLocalHost().getHostName()));

			// Obtener matriz de bytes de la IP 
			
			byte[] address = InetAddress.getLocalHost().getAddress();
			System.out.println("CON LA MATRIZ getAddress():");
			for (int i = 0; i < address.length; i++) {
				System.out.println(address[i] & 0xFF);
			}
		} catch (Exception e) {
			System.out.println("ERROR: " + e);
		}
	}
}
